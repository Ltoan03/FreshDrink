@model IEnumerable<FreshDrink.Web.Models.DrinkListItem>

@{
    ViewData["Title"] = "ƒê·ªì u·ªëng";

    var q        = Context.Request.Query["q"].ToString();
    var sort     = Context.Request.Query["sort"].ToString();
    var category = Context.Request.Query["category"].ToString();

    int pageIndex = ViewBag.PageIndex is int pi ? pi : 1;
    bool hasPrev  = ViewBag.HasPrev  is bool hp ? hp : false;
    bool hasNext  = ViewBag.HasNext  is bool hn ? hn : false;
}

<div class="store-container container py-4">

    <div class="row g-4">

        <!-- SIDEBAR -->
        <aside class="col-12 col-md-4 col-lg-3">
            <div class="sidebar card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-filter-square text-primary fs-5"></i>
                        <strong class="fs-6">Danh m·ª•c</strong>
                    </div>
                </div>

                <div class="list-group list-group-flush">
                    <a href="/do-uong"
                       class="list-group-item list-group-item-action sidebar-item @(string.IsNullOrEmpty(category) ? "active" : "")">
                        <i class="bi bi-grid"></i> T·∫•t c·∫£ s·∫£n ph·∫©m
                    </a>

                    @foreach (var c in (IEnumerable<dynamic>)ViewBag.Categories)
                    {
                        string slug = c.Slug;
                        bool isActive = category == slug;

                        <a href="/do-uong?category=@slug"
                           class="list-group-item list-group-item-action sidebar-item @(isActive ? "active" : "")">
                            <i class="bi bi-cup-straw"></i> @c.Name
                        </a>
                    }
                </div>
            </div>
        </aside>


        <!-- PRODUCTS SECTION -->
        <section class="col-12 col-md-8 col-lg-9">

            <!-- HEADER -->
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">

                <h4 class="fw-bold text-primary">
                    @(string.IsNullOrEmpty(category)
                        ? "ü•§ T·∫§T C·∫¢ S·∫¢N PH·∫®M"
                        : $"üîé {Model.FirstOrDefault()?.CategoryName}")
                </h4>

                <form id="sortForm" method="get" action="/do-uong" class="d-flex gap-2 align-items-center">
                    <input type="hidden" name="q" value="@q" />
                    <input type="hidden" name="category" value="@category" />
                    <input type="hidden" name="page" value="1" />

                    <select name="sort" class="form-select border-primary rounded-pill px-3" style="width:155px" onchange="this.form.submit()">

                        <option value="" selected="@(string.IsNullOrEmpty(sort) ? "selected" : null)"> üîÑ M·∫∑c ƒë·ªãnh </option>
                        <option value="price-asc"  selected="@(sort == "price-asc"  ? "selected" : null)"> üí≤ Gi√° tƒÉng d·∫ßn </option>
                        <option value="price-desc" selected="@(sort == "price-desc" ? "selected" : null)"> üí∞ Gi√° gi·∫£m d·∫ßn </option>
                        <option value="name"       selected="@(sort == "name"       ? "selected" : null)"> üî§ T√™n A ‚Üí Z </option>

                    </select>
                </form>
            </div>


            <!-- PRODUCT LIST -->
            <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-md-3">

                @if (Model?.Any() == true)
                {
                    foreach (var d in Model)
                    {
                        var img = string.IsNullOrWhiteSpace(d.ImageUrl)
                            ? Url.Content("~/img/placeholder.jpg")
                            : d.ImageUrl;

                        <div class="col">
                            <div class="product-card card h-100 border-0 shadow-sm rounded-4 position-relative">

                                <!-- FEATURED LABEL -->
                                @if (d.IsFeatured)
                                {
                                    <div class="position-absolute top-0 end-0 bg-warning text-dark px-3 py-1 rounded-start-pill fw-bold small">
                                        ‚≠ê Hot
                                    </div>
                                }

                                <a href="/do-uong/@d.Id" class="ratio ratio-4x3 product-img rounded-top overflow-hidden">
                                    <img src="@img" class="img-cover" alt="@d.Name" />
                                </a>

                                <div class="card-body">
                                    <h6 class="fw-semibold text-truncate" title="@d.Name">@d.Name</h6>

                                    <!-- Rating -->
                                    @if (d.ReviewsCount > 0)
                                    {
                                        <div class="text-warning small mb-1">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Round(d.Rating))
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                            <span class="text-muted ms-1">(@d.ReviewsCount)</span>
                                        </div>
                                    }

                                    <div class="d-flex justify-content-between mt-2 align-items-center">
                                        <span class="fs-6 text-success fw-bold">@String.Format("{0:N0}ƒë", d.Price)</span>

                                        <a href="/do-uong/@d.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm">
                                            üëÅ Xem
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col text-center">
                        <div class="alert alert-warning rounded-pill px-4">
                            ‚ùå Kh√¥ng c√≥ s·∫£n ph·∫©m ph√π h·ª£p.
                        </div>
                    </div>
                }
            </div>


            <!-- PAGINATION -->
            @if (hasPrev || hasNext)
            {
                <nav class="mt-4 text-center">
                    <div class="d-flex justify-content-between align-items-center">

                        <a class="btn btn-outline-primary rounded-pill px-3 @(hasPrev ? "" : "disabled")"
                           href="/do-uong?category=@category&sort=@sort&page=@(pageIndex-1)">
                            ‚¨Ö Trang tr∆∞·ªõc
                        </a>

                        <span class="fw-semibold">Trang <strong>@pageIndex</strong></span>

                        <a class="btn btn-outline-primary rounded-pill px-3 @(hasNext ? "" : "disabled")"
                           href="/do-uong?category=@category&sort=@sort&page=@(pageIndex+1)">
                            Trang sau ‚û°
                        </a>
                    </div>
                </nav>
            }

        </section>
    </div>
</div>
