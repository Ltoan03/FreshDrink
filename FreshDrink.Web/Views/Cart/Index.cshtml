@model FreshDrink.Web.ViewModels.CartVm
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container py-5">

    <h3 class="fw-bold mb-4">Giỏ hàng</h3>

    @if (TempData["ok"] is string okMsg)
    {
        <div class="alert alert-success rounded-pill px-4 py-2">
            @okMsg
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info p-4 rounded-4 shadow-sm text-center">
            Giỏ hàng trống.<br />
            <a asp-controller="Store" asp-action="Index" class="fw-bold text-primary text-decoration-none d-block mt-2">
                Mua sắm ngay →
            </a>
        </div>
    }
    else
    {
        <table class="table table-borderless align-middle bg-white shadow-sm rounded-4 overflow-hidden">
            <thead class="bg-light border-bottom">
                <tr class="text-muted">
                    <th style="width:100px;">Sản phẩm</th>
                    <th>Tên sản phẩm</th>
                    <th class="text-end">Đơn giá</th>
                    <th class="text-center" style="width:150px;">Số lượng</th>
                    <th class="text-end">Thành tiền</th>
                    <th style="width:50px;"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <div class="ratio ratio-1x1 rounded border overflow-hidden" style="width:80px; height:80px;">
                                <img src="@item.ImageUrl" class="w-100 h-100" style="object-fit:cover;" />
                            </div>
                        </td>

                        <td class="fw-semibold">@item.Name</td>
                        <td class="text-end text-primary fw-semibold">@String.Format("{0:N0}đ", item.UnitPrice)</td>

                        <td class="text-center">
                            <form asp-action="Update" method="post" class="d-flex justify-content-center gap-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="drinkId" value="@item.DrinkId" />
                                <input type="number" name="quantity" min="1" value="@item.Quantity"
                                       class="form-control form-control-sm text-center rounded-pill" style="width:65px;" />
                                <button class="btn btn-sm btn-outline-primary rounded-pill px-3">Lưu</button>
                            </form>
                        </td>

                        <td class="text-end fw-bold text-success">@String.Format("{0:N0}đ", item.LineTotal)</td>

                        <td class="text-end">
                            <form asp-action="Remove" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="drinkId" value="@item.DrinkId" />
                                <button class="btn btn-sm btn-outline-danger rounded-pill px-3">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot class="bg-light">
                <tr>
                    <td colspan="4" class="text-end">Tạm tính</td>
                    <td class="text-end fw-semibold">@String.Format("{0:N0}đ", Model.Subtotal)</td>
                </tr>

                @if (!string.IsNullOrEmpty(Model.VoucherCode))
                {
                    <tr>
                        <td colspan="4" class="text-end text-success fw-semibold">
                            Mã giảm giá: <b>@Model.VoucherCode</b>
                        </td>
                        <td class="text-end text-danger fw-bold">- @String.Format("{0:N0}đ", Model.DiscountAmount)</td>
                    </tr>
                }

                <tr>
                    <td colspan="4" class="text-end fs-5 fw-bold">Tổng cộng</td>
                    <td class="text-end text-success fs-5 fw-bold">@String.Format("{0:N0}đ", Model.Total)</td>
                </tr>
            </tfoot>
        </table>

        <!-- Voucher input -->
        <div class="mt-3 p-3 bg-white shadow-sm rounded-4 d-flex align-items-center gap-3"
             style="max-width:420px;">

            <input id="voucherCode" value="@Model.VoucherCode" class="form-control rounded-pill"
                   placeholder="Nhập mã giảm giá..." />

            <button id="applyVoucher" class="btn btn-outline-primary rounded-pill px-3">
                Áp dụng
            </button>

            @if (!string.IsNullOrEmpty(Model.VoucherCode))
            {
                <form asp-action="RemoveVoucher" method="post">
                    <button class="btn btn-outline-danger rounded-pill px-3">Xóa</button>
                </form>
            }
        </div>

        <div id="voucherResult" class="mt-2"></div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Store" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                ← Tiếp tục mua sắm
            </a>

            <div class="d-flex gap-3">
                <form asp-action="Clear" method="post">@Html.AntiForgeryToken()
                    <button class="btn btn-outline-danger rounded-pill px-4">Xóa tất cả</button>
                </form>
                <form asp-action="Checkout" method="post">
                    <button class="btn btn-success rounded-pill px-4">Thanh toán</button>
                </form>
            </div>
        </div>
    }
</div>

<script>
    document.getElementById("applyVoucher")?.addEventListener("click", function () {
        const code = document.getElementById("voucherCode").value.trim();
        if (!code) return alert("Vui lòng nhập mã voucher!");

        fetch(`/Cart/ApplyVoucher?code=${code}`)
            .then(res => res.json())
            .then(data => {
                let box = document.getElementById("voucherResult");
                box.innerHTML = data.success
                    ? `<span class='text-success fw-bold'>${data.message}</span>`
                    : `<span class='text-danger fw-bold'>${data.message}</span>`;

                if (data.success) setTimeout(() => location.reload(), 700);
            });
    });
</script>
