@model DrinkListItem

<div class="col-sm-6 col-md-4 col-lg-3">
    <div class="card h-100 shadow-sm drink-card">
        
        <img class="card-img-top object-fit-cover" 
             style="height:180px" 
             src="@Model.ImageUrl" 
             alt="@Model.Name" />

        <div class="card-body d-flex flex-column">

            <!-- Tên sản phẩm -->
            <h6 class="card-title mb-1 text-truncate" title="@Model.Name">@Model.Name</h6>

            <!-- Danh mục -->
            <div class="text-muted small mb-2">
                <i class="bi bi-tags"></i> @Model.CategoryName
            </div>

            <!-- Giá -->
            <div class="fw-semibold text-primary mb-3">
                @Model.Price.ToString("N0") ₫
            </div>

            <!-- Action buttons -->
            <div class="mt-auto d-grid gap-2">
                <a class="btn btn-outline-primary btn-sm"
                   asp-controller="Drinks"
                   asp-action="Detail"
                   asp-route-id="@Model.Id">
                    <i class="bi bi-eye"></i> Chi tiết
                </a>

                <form asp-controller="Cart" asp-action="Add" method="post">
                    <input type="hidden" name="drinkId" value="@Model.Id" />
                    <button class="btn btn-primary btn-sm">
                        <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
