@{
    var title = ViewData["Title"] as string ?? "FreshDrink";
    var controller = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "");
    var action = (ViewContext.RouteData.Values["action"]?.ToString() ?? "");

    bool isHome = controller.Equals("Home", StringComparison.OrdinalIgnoreCase);
    bool isStore = controller.Equals("Store", StringComparison.OrdinalIgnoreCase);
}

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - FreshDrink</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

<header class="main-nav">
    <nav class="navbar navbar-expand-lg navbar-light container py-2">

        <!-- LOGO -->
        <a class="navbar-brand fw-bold fs-4 text-decoration-none" asp-controller="Home" asp-action="Index">
            🍹 FreshDrink
        </a>

        <!-- Mobile menu button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="mainNav" class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                <li class="nav-item">
                    <a class="nav-link @(isHome ? "active" : "")" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door-fill"></i> Trang chủ
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(isStore ? "active" : "")" href="/do-uong">
                        <i class="bi bi-cup-straw"></i> Đồ uống
                    </a>
                </li>

                <li class="nav-item position-relative">
                    <a class="nav-link" asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart3"></i> Giỏ hàng
                        <span id="cart-count" class="badge rounded-pill bg-danger position-absolute"
                              style="top: 2px; right: -8px; font-size: 11px; display:none;">
                        </span>
                    </a>
                </li>

                <li class="nav-item">
    @{
        string orderAction = User.IsInRole("Admin") ? "Index" : "MyOrders";
    }

    <a class="nav-link" asp-controller="Orders" asp-action="Index">
    <i class="bi bi-receipt"></i> Đơn hàng
</a>


</li>


                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-danger fw-semibold" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-gear-fill"></i> Quản trị
                        </a>

                        <ul class="dropdown-menu shadow-sm">
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Drinks" asp-action="Index"><i class="bi bi-cup-hot"></i> Quản lý đồ uống</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Categories" asp-action="Index"><i class="bi bi-tags-fill"></i> Quản lý danh mục</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminOrders" asp-action="Index"><i class="bi bi-box-seam"></i> Quản lý đơn hàng</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Voucher" asp-action="Index">🎟 Quản lý voucher</a></li>
                        </ul>
                    </li>
                }
            </ul>

            <!-- USER PARTIAL -->
            <partial name="_LoginPartial" />
        </div>
    </nav>
</header>


<main class="flex-fill">
    <div class="container py-4">
        <partial name="_Toast" />
        @RenderBody()
    </div>
</main>


<footer class="footer-fixed shadow-sm mt-auto">
    <div class="container small py-3 text-center">
        © @DateTime.Now.Year - FreshDrink 🍹 |
        <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
    </div>
</footer>


<!-- 📞 Floating Button -->
<div class="contact-wrapper">
    <button class="contact-btn" id="contactToggle">
        <i class="bi bi-telephone-fill fs-4"></i>
    </button>

    <div class="contact-menu" id="contactMenu">
        <a href="https://m.me/yourfacebookpage" target="_blank"><i class="bi bi-messenger"></i> Messenger</a>
        <a href="tel:0394964030"><i class="bi bi-telephone"></i> Gọi: 039 496 4030</a>
        <a href="mailto:freshdrink@gmail.com"><i class="bi bi-envelope-fill"></i> Gmail</a>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)

<script>
document.getElementById("contactToggle").onclick = () => {
    document.getElementById("contactMenu").classList.toggle("show");
};

window.addEventListener("scroll", function () {
    document.querySelector(".main-nav").classList.toggle("shrink", window.scrollY > 10);
});

// 🔥 Load số item giỏ hàng nếu có API count
fetch('/Cart/GetCount')
    .then(x => x.json())
    .then(count => {
        if (count > 0) {
            let badge = document.getElementById("cart-count");
            badge.style.display = "block";
            badge.textContent = count;
        }
    });
</script>

</body>
</html>
