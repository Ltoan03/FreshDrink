@using Microsoft.AspNetCore.Http
@using FreshDrink.Web.Infrastructure

@{
    var title = ViewData["Title"] as string ?? "FreshDrink";
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    bool isHome = controller.Equals("Home", StringComparison.OrdinalIgnoreCase);
    bool isStore = controller.Equals("Store", StringComparison.OrdinalIgnoreCase);

    int cartCount = Context.Session.GetInt32("CartCount") ?? 0;
}

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - FreshDrink</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

<header class="main-nav shadow-sm bg-white">
    <nav class="navbar navbar-expand-lg container py-2">

        <!-- logo -->
        <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="Index">
            FreshDrink
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="mainNav" class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                <li class="nav-item">
                    <a class="nav-link @(isHome ? "active fw-bold text-primary" : "")" asp-controller="Home" asp-action="Index">
                        Trang chủ
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(isStore ? "active fw-bold text-primary" : "")" href="/do-uong">
                        Đồ uống
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(controller == "Orders" ? "active fw-bold text-primary" : "")" asp-controller="Orders" asp-action="Index">
                        Đơn hàng
                    </a>
                </li>

                <!-- Cart badge -->
                <li class="nav-item ms-2 position-relative">
                    <a asp-controller="Cart" asp-action="Index" class="nav-link fw-semibold">
                        Giỏ hàng
                        <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle"
                              id="cart-count"
                              style="font-size:12px; display:@(cartCount > 0 ? "inline" : "none")">
                              @cartCount
                        </span>
                    </a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown ms-2">
                        <a class="nav-link dropdown-toggle text-danger fw-semibold" role="button" data-bs-toggle="dropdown">
                            Quản trị
                        </a>

                        <ul class="dropdown-menu shadow-sm">
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminOrders" asp-action="Index">Quản lý đơn hàng</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Drinks" asp-action="Index">Quản lý đồ uống</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Categories" asp-action="Index">Quản lý danh mục</a></li>
                        </ul>
                    </li>
                }
            </ul>

            <!-- 🔹 Login partial -->
            <partial name="_LoginPartial" />
        </div>
    </nav>
</header>

<main class="flex-fill">
    <div class="container py-4">
        <partial name="_Toast" />
        @RenderBody()
    </div>
</main>

<footer class="footer-fixed shadow-sm mt-auto bg-light">
    <div class="container small py-3 text-center text-muted">
        © @DateTime.Now.Year - FreshDrink | <a class="text-decoration-none" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)

<script>
    function refreshCartBadge() {
        fetch('/Cart/GetCount')
            .then(res => res.json())
            .then(count => {
                const badge = document.getElementById("cart-count");
                badge.style.display = count > 0 ? "inline" : "none";
                badge.textContent = count;
            });
    }
    refreshCartBadge();
</script>

</body>
</html>
