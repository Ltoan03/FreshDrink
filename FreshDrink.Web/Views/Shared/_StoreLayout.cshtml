@{
    Layout = null;
    var title = ViewData["Title"] ?? "FreshDrink";
}
<!doctype html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title · FreshDrink</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-body-tertiary">
  <nav class="navbar navbar-expand-lg bg-body border-bottom sticky-top">
    <div class="container">
      <a class="navbar-brand fw-bold" asp-controller="Store" asp-action="Index">
        <i class="bi bi-cup-hot text-primary me-1"></i>FreshDrink
      </a>
      <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav"><span class="navbar-toggler-icon"></span></button>
      <div id="nav" class="collapse navbar-collapse">
        <form class="d-flex ms-auto" asp-controller="Store" asp-action="Index" method="get" role="search">
          <input class="form-control me-2" type="search" name="q" value="@Context.Request.Query["q"]" placeholder="Tìm đồ uống...">
          <button class="btn btn-outline-primary"><i class="bi bi-search"></i></button>
        </form>
        <a class="btn btn-primary ms-2" asp-controller="Cart" asp-action="Index"><i class="bi bi-bag me-1"></i>Cart</a>
        <a class="btn btn-outline-secondary ms-2" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2 me-1"></i>Admin</a>
      </div>
    </div>
    <a class="btn btn-primary ms-2" asp-controller="Cart" asp-action="Index">
  <i class="bi bi-bag me-1"></i>Cart
</a>
<a class="btn btn-outline-secondary ms-2" asp-controller="Home" asp-action="Index">
  <i class="bi bi-speedometer2 me-1"></i>Admin
</a>

  </nav>

  <main class="container py-4">@RenderBody()</main>

  <footer class="border-top py-4 mt-4">
    <div class="container small text-muted d-flex justify-content-between">
      <span>© @DateTime.Now.Year FreshDrink</span><span>Storefront</span>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
