@model IEnumerable<FreshDrink.Web.ViewModels.OrderSummaryVm>

@{
    ViewData["Title"] = "Đơn hàng của bạn";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container py-4">

    <h3 class="fw-bold mb-4">
        <i class="bi bi-box-seam"></i> Danh sách đơn hàng
    </h3>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center p-4 rounded-3 shadow-sm">
            <i class="bi bi-exclamation-triangle-fill fs-4"></i>
            <p class="mt-2 mb-0">Bạn chưa có đơn hàng nào.</p>

            <a asp-controller="Store" asp-action="Index" class="btn btn-primary mt-3 rounded-pill px-4">
                <i class="bi bi-shop"></i> Mua ngay
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle bg-white">
                <thead class="table-light text-center small text-muted">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Hành động</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var o in Model)
                    {
                        string badge = o.Status switch
                        {
                            "Pending" => "warning text-dark",
                            "Approved" => "success",
                            "Rejected" => "danger",
                            _ => "secondary"
                        };

                        <tr class="text-center">
                            <td class="fw-semibold">#@o.Id</td>
                            <td>@o.Total.ToString("N0") đ</td>

                            <td>
                                <span class="badge bg-@badge px-3 py-2 rounded-pill">@o.Status</span>
                            </td>

                            <td>@o.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>

                            <td>
                                <a asp-action="Details" asp-route-id="@o.Id"
                                   class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
