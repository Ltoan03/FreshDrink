@model IEnumerable<FreshDrink.Web.ViewModels.OrderSummaryVm>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="container py-4">
    <h3 class="fw-bold mb-4">
        <i class="bi bi-receipt"></i> Quản lý đơn hàng
    </h3>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center p-4 rounded-3 shadow-sm">
            <i class="bi bi-inbox fs-3 text-secondary"></i>
            <div class="mt-2">Chưa có đơn hàng nào.</div>
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Người đặt</th>
                    <th>Tổng</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th>Hành động</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var o in Model)
                {
                    string color = o.Status switch
                    {
                        "Pending" => "warning text-dark",
                        "Approved" => "success",
                        "Rejected" => "danger",
                        _ => "secondary"
                    };

                    <tr>
                        <td class="fw-bold">#@o.Id</td>
                        <td>@o.UserName</td>
                        <td>@o.Total.ToString("N0") đ</td>

                        <td><span class="badge bg-@color px-3 py-2 rounded-pill">@o.Status</span></td>

                        <td>@o.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>

                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Details" asp-route-id="@o.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>

                                @if (o.Status == "Pending")
                                {
                                    <form asp-action="Approve" method="post">
                                        <input type="hidden" name="id" value="@o.Id" />
                                        <button class="btn btn-success btn-sm">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>

                                    <form asp-action="Reject" method="post">
                                        <input type="hidden" name="id" value="@o.Id" />
                                        <button class="btn btn-warning btn-sm">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                }

                                <form asp-action="Delete" method="post"
                                      onsubmit="return confirm('Xóa đơn #@o.Id?');">
                                    <input type="hidden" name="id" value="@o.Id" />
                                    <button class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
