@model FreshDrink.Data.Models.Drink
@{
    ViewData["Title"] = "Xóa đồ uống";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="mb-3">
    <p>Bạn có chắc muốn xóa đồ uống sau?</p>
    <dl class="row">
        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("#,0 đ")</dd>
        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
